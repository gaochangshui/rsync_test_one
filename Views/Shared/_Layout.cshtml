<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GitLab Manager</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/bootstrap-icons.css">
    <link href="~/favicon.ico" rel="icon" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/fakeloader.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="fakeloader-overlay" class="visible incoming"><div class="loader-wrapper-outer"><div class="loader-wrapper-inner"><div class="loader"></div></div></div></div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GitLab Manager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <!--
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">User <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("View Users List", "Index", "Users")</li>
                                <li>@Html.ActionLink("Set Avatar", "SetAvatar", "Users")</li>
                                <li>@Html.ActionLink("Set Language", "SetLanguage", "Users")</li>
                            </ul>
                        </li>
                    -->
                    <li>@Html.ActionLink("Set Reviewer", "SetReviewer", "Users")</li>
                    <li>@Html.ActionLink("Create User SubGroup in Playground", "CreateUserSubGroupInPlayground", "Users")</li>
                    <li>@Html.ActionLink("Set Protected Branch Can Not Push", "SetProtectedBranchCanNotPush", "Users")</li>
                    <li>@Html.ActionLink("Disable Retired User", "DisableRetiredUser", "Users")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Repository <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("All Repository", "Index", "Warehouse")</li>
                            <li>@Html.ActionLink("Repository Sync", "sync", "Warehouse")</li>
                        </ul>
                    </li>

                </ul>
                <section id="login" class="nav navbar-nav navbar-right" style="padding:15px;">

                    <div style="padding: 0; margin: 0; float: right; vertical-align:middle;height:25px;">
                        @Html.Partial("_LoginPartial")
                    </div>
                </section>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - GitLab Manager  <a href="https://code.trechina.cn/gitlab/public-lib/source-management-support/-/issues" title="欢迎提问！管理员很快会看到你的意见和建议">我要提问</a></p>
        </footer>
    </div>
    <script src="~/Content/jquery.min.js"></script>
    <script src="~/Content/bootstrap.min.js"></script>
    <script type="text/javascript" charset="utf8" src="~/Content/dataTables/jquery.dataTables.js"></script>
    @Scripts.Render("~/Scripts/fakeloader.min.js")
    <script>
        $(document).ready(
            function () {
                window.FakeLoader.init();
            }
        );
    </script>
</body>
</html>
