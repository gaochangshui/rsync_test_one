@{
    if (Session["LoginedUser"] != null)
    {

        string usercd = Session["LoginedUser"].ToString();
        string username = Session["LoginedUserName"].ToString();
        string avatar = Session["LoginedUserAvatar"].ToString();
        string web = Session["LoginedUserWeb"].ToString();

        <text>
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()

                <div style="padding: 0; margin: 0; float: left;">
                    <div style="-webkit-box-flex: 1;border:1px solid #FFF; border-radius:35px; width:35px;height:35px; margin:-5px 5px -5px 0; background-image: url(@avatar); background-position:center; background-size: 38px; opacity: 1 ;background-repeat:no-repeat;cursor:pointer;" onclick="window.location.href= '@web';return false"></div>
                </div>

                <a href="@web" style="font-size:revert; ">@username</a>

                <!--@Html.Label(username, new { style = "color:#9d9d9d;font-family:'Meiryo UI';font-weight:100;" }) -->

                <a href="javascript:document.getElementById('logoutForm').submit()">  <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> </a>

            }
        </text>
    }
    else
    {
        <ul>
            <li>@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        </ul>
    }
}
